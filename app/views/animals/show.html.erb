<div class="container">
  <%= link_to animals_path, class:'btn-back' do %>
    <i class="fa-solid fa-angle-left"></i>
  <% end %>
  <div class='animal-container'>

    <div class="animal-picture">
        <%= cl_image_tag(@animal.photo.key, width: 600)%>
    </div>

    <div class="animal-info w-50">

      <div class="animal-specs">

        Name: <%= @animal.name.capitalize%><br>

        Species: <%= @animal.species.capitalize %><br>

        Location: <%= @animal.location.capitalize %><br>

        Birthday: <%= @animal.birthday %><br>

        Bio: <%= @animal.bio %>

      </div>

      <!-- Button trigger modal -->
      <button type="button" class="btn-add" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Launch demo modal
      </button>

      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">New Booking</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
            <%= simple_form_for [@animal, @booking] do |f| %>
                <%= f.input :date %>

                <%= f.submit class: 'btn btn-add' %>
              <% end %>
            </div>
            <div class="modal-footer">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




