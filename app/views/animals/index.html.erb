<div class="container">
<h2 class='text-center'>All Animals</h2>
<% if user_signed_in? %>
  <div class="cards">
    <% @animals.each do |animal| %>
      <div class="card-trip">
        <img src="<%= cl_image_path animal.photo.key %>" />
        <div class="card-trip-infos">
          <div>
            <%= link_to animal.name, animal_path(animal) %>
            <p><%= animal.category %></p>
          </div>
          <h2 class="card-trip-pricing"><%= animal.location %></h2>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <%= link_to "Sign in", new_user_session_path, class: 'btn btn-primary' %> <br>
  <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-info' %><br>
<% end %>
</div>
