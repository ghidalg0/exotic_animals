<div class="container">
<h2>This is the home page</h2>
<% if user_signed_in? %>
  <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: 'btn btn-danger'%><br>
  <%= link_to "Add new animal", new_animal_path, class: 'btn btn-primary'%> <br>
  <%= link_to "My Dashboard", dashboard_path, class: 'btn btn-info' %>
<% else %>
  <%= link_to "Sign in", new_user_session_path() %> <br>
  <%= link_to "Sign up", new_user_registration_path() %><br>
<% end %>

<% @animals.each do |animal| %>
<br><%= link_to animal.name, animal_path(animal) %> <br>
<% end %>

</div>
